<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:zhy="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请选择颜色"
        android:layout_marginTop="10dp"/>
    <com.bwie.shopping.view.FlowLayout
        android:id="@+id/flowlayout"
        android:layout_width="match_parent"
        android:layout_height="100dp"></com.bwie.shopping.view.FlowLayout>o

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:clickable="true"
            android:id="@+id/jian"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/jian"
            android:layout_alignParentRight="true"/>
        <TextView
            android:id="@+id/count"
            android:text="1"
            android:textSize="23sp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/jian"
            />
        <ImageView
            android:clickable="true"
            android:id="@+id/jia"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/jia"
            android:layout_toLeftOf="@id/count"
            />

    </RelativeLayout>
    <Button
        android:id="@+id/add_cart_ok"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@drawable/but_shape"
         android:text="确定"
        android:textSize="22sp"
        android:textColor="@color/colorWhite2"/>
</LinearLayout>